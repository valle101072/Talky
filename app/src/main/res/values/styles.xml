<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/material_drawer_background</item>
    </style>

    <style name="actionMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="background">?attr/material_drawer_background</item>
        <item name="actionMenuTextColor">?attr/material_drawer_header_selection_subtext</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_middle</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin_start</item>
        <item name="android:background">@color/material_drawer_header_selection_subtext</item>
    </style>

    <style name="SettingsLabelText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_start</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_large</item>
    </style>

    <style name="SettingsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_middle</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_start</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/md_dark_primary_text</item>
    </style>

    <style name="SettingsContext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_start</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/md_dark_primary_text</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/material_drawer_header_selection_subtext</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_margin">@dimen/vertical_margin_large</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:inputType">phone</item>
        <item name="android:textColorHint">@color/material_drawer_dark_header_selection_subtext</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">* * * * * *</item>
        <item name="colorControlActivated">@color/material_drawer_primary</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/horizontal_margin_start</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:textColor">@color/material_drawer_primary</item>
    </style>

    <style name="next_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/horizontal_margin_start</item>
        <item name="android:backgroundTint">?attr/material_drawer_background</item>
        <item name="android:contentDescription">@string/next_button</item>
    </style>
</resources>